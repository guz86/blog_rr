<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <link data-require="bootstrap-css@3.3.6" data-semver="3.3.6" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" />

  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

			<!-- Static navbar -->
			<nav class="navbar navbar-default" role="navigation">
			  <div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			      <span class="sr-only">Toggle navigation</span>
			    	<span class="icon-bar"></span>
                	<span class="icon-bar"></span>
                	<span class="icon-bar"></span>
              	</button>
				<%= link_to "Rails Blog", home_index_path, class: "navbar-brand" %>
			  </div>

			  <div class="navbar-collapse collapse">
			    <ul class="nav navbar-nav">
			       <li><%= link_to 'Articles', articles_path %></li>
			        <li><%= link_to 'Contacts', contacts_path %></li>
			         <li><%= link_to 'Terms', terms_path %></li>
			          <li><%= link_to 'About', about_path %></li>
		  		</ul>

				<ul class="nav navbar-nav navbar-right">			
					<% if user_signed_in? %>
					<li>Hello, <%= current_user.username %> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
					<% else %>
					<li><%= link_to 'Sign In', new_user_session_path %></li>

					<% end %>
			    </ul>
			  </div><!--/.nav-collapse -->
			</nav>

 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
 

<%= yield %>
    </div> <!-- /.container -->
</body>
</html>
